                  $adjustedParameters = _checkbook_project_applyParameterFilters($node,$parameters);
            }
            return $adjustedParameters;
",
"cleanURLParameters":["year","agency","yeartype","awdmethod","vendor","status","csize","cindustry"],
"urlParamMap":{"year":"fiscal_year_id","agency":"agency_id","yeartype":"yeartype.yeartype","awdmethod":"award_method_id","vendor":"vendor_id","status":"contract_status.contract_status","csize":"award_size_id","cindustry":"industry_type_id"},
"transformationPHP": "
    $data = array();
    $categories=array();
    foreach ($node->data as $row){
                   $link= CustomURLHelper::prepareUrl('contracts_revenue_landing', ContractURLHelper::$landingPageParams, array('expandBottomCont'=>'true'), array('agency'=>$row['agency_agency']) );
                   $categories[]=html_entity_decode($row['agency_agency_agency_short_name'],ENT_QUOTES);
                   $data[] = (object)array('total_contracts'=>$row['total_contracts'],'year'=>$row['fiscal_year_id'],'agency_id'=>$row['agency_agency'],'y'=>$row['current_amount_sum'],'url'=>$link,'name'=>strtoupper(html_entity_decode($row['agency_agency_agency_name'],ENT_QUOTES)));
    }$node->widgetConfig->chartConfig->series[0]->data = $data;
    $node->widgetConfig->chartConfig->xAxis->categories = $categories;
    $node->widgetConfig->chartConfig->series[0]->name = 'Contract Amount';
    $node->widgetConfig->chartTitle = _checkbook_project_getChartTitle('contracts','Top Ten Agencies','by');

    return $node->data;
",

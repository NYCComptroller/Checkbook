/** Hook to place the smart search form in block. *
 * @param string $delta
 * @return mixed
 */

function checkbook_smart_search_block_view($delta='')
{
    switch($delta) {
        case 'checkbook_smart_search_form':
            $block['subject'] = null;
            $block['content'] = drupal_get_form('checkbook_smart_search_form');
            break;
    }
   return $block;
 }


            JOIN vendor j2 ON j2.vendor_id = s0.prime_vendor_id
            JOIN ref_agency j3 ON j3.agency_id = s0.agency_id
            JOIN (SELECT DISTINCT original_agreement_id, 
                        contract_number 
                    FROM agreement_snapshot WHERE latest_flag = 'Y') j4_b

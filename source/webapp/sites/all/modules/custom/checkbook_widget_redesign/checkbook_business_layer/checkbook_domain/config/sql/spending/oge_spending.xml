                    <exp op="=" dbField="vendor_id" paramName="vendor" />
                    <exp op="=" dbField="vendor_id" paramName="fvendor" />
                    <exp op="=" dbField="spending_category_id" paramName="category"/>
                    <exp op="=" dbField="is_all_categories" paramName="is_all_categories"/>
                </exp>
            </where>
        </sql>
    </statement>
</statements>


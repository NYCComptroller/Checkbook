            SELECT COUNT(*) AS record_count
            FROM (SELECT s0.document_id AS document_id_document_id
                    FROM aggregateon_spending_contract s0
            <where>
                <exp op="AND">
                    <exp op="=" dbField="s0.year_id" paramName="year" />

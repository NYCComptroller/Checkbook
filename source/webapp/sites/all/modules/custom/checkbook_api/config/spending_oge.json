                        "Commodity Line":"agreement_commodity_line_number"
                    }
                }
            }
        },
        "requestParameters":{
            "fiscal_year":{
                "valueType":"value",
                "dataType":"year",
                "maxLength":"4"
            },
            "calendar_year":{
                "valueType":"value",
                "dataType":"year",
                "maxLength":"4"
            },
            "payee_code":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"20"
            },
            "document_id":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"30"
            },
            "agency_code":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"3"
            },
            "agency_name":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"30"
            },            
            "issue_date":{
                "valueType":"range",
                "dataType":"date",
                "format":"YYYY-MM-DD"
            },
            "department_code":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"9"
            },
            "check_amount":{
                "valueType":"range",
                "dataType":"amount",
                "maxLength":"22"
            },
            "expense_category":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"4"
            },
            "contract_ID":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"32"
            },
            "capital_project_code":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"15"
            },
            "spending_category":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"2"
            },
            "budget_name":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"60"
            },
            "entity_contract_num":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"32"

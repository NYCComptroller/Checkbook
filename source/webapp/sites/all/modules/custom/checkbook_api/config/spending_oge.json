                        "Check Amount":"check_amount",
                        "Expense Category":"expenditure_object_name",
                        "Contract ID":"reference_document_number",
                        "Purpose":"purpose",
                        "Capital Project":"reporting_code",
                        "Spending Category":"spending_category_name",

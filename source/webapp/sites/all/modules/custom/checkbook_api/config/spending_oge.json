            "commodity_line":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"32"
            } 
        }
    },
    "validators":[
        {
            "name":"optionalSingleFilter",
            "configKey":["spending_oge"],
            "config":{
                "criteriaLevel":["value", "range"],
                "validatorType":"filterName",
                "validatorTypeConfig":{
                    "filterNames":["fiscal_year", "calendar_year", "issue_date"]
                }
            }
        }
    ]
}
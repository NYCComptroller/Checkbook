                      "Issue Date": "Issue Date",
                      "Program": "Program",
                      "Project": "Project",
                      "Purchase Order Type": "Purchase Order Type",
                      "Purpose": "Purpose",
                      "Record Type": "Record Type",
                      "Release number": "Release number",
                      "Responsibility Center": "Responsibility Center",
                      "Section 8": "Section 8",
                      "Spending Category": "spending_category_name",
                      "Vendor": "vendor_name",
                      "Withheld Amount": "Withheld Amount"
                    }
                }
            }
        },
        "requestParameters":{
            "fiscal_year":{
                "valueType":"value",
                "dataType":"year",
                "maxLength":"4"
            },
            "payee_name":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"100"
            },
            "agency_code":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"3"
            },
            "department_code":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"9"
            },
            "check_amount":{
                "valueType":"range",
                "dataType":"amount",
                "maxLength":"22"
            },
            "expense_category":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"4"
            },
            "contract_id":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"32"
            },
            "capital_project_code":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"15"
            },
            "spending_category":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"2"
            },
            "budget_name":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"75"
            },
            "entity_contract_number":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"15"
            } ,
            "commodity_line":{
                "valueType":"value",
                "dataType":"text",
                "maxLength":"3"
            }

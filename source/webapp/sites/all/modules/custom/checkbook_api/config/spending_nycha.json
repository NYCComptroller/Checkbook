    "validators":[
        {
            "name":"optionalSingleFilter",
            "configKey":["spending"],
            "config":{
                "criteriaLevel":["value", "range"],
                "validatorType":"filterName",
                "validatorTypeConfig":{
                    "filterNames":["fiscal_year"]
                }
            }
        }
    ]
}

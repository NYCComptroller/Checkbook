function array_values_recursive($ary)
{
   $lst = array();
    if(is_array($ary)){
        foreach( array_keys($ary) as $k ){
            $v = $ary[$k];
            if (is_scalar($v)) {
                $lst[] = $v;
            } elseif (is_array($v)) {
                $lst = array_merge( $lst,
                    array_values_recursive($v)
                );
            }
        }
    }

   return $lst;
}


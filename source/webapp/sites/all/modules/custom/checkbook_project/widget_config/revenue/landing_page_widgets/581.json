"header":"
    $node->widgetConfig->getData=false;
    load_widget_data($node);
    if($node->totalDataCount > 4) $count = '<span class=\"hideOnExpand\">5 </span>';
    $header='<div class=\"tableHeader\"><h2>Top ' .  $count . 'Revenue Categories by Cross Year Collections</h2><span class=\"contCount\"> Number of Revenue Categories:  ' . number_format($node->totalDataCount) . '</span></div>';
    return $header;
",
"footer":"
    $url = '/panel_html/revenue_category_revenue_by_cross_year_collections_details/revenue/revcat_details'.'/dtsmnid/' . $node->nid;
    $url .= _checkbook_project_get_url_param_string('agency');
    $url .= _checkbook_project_get_url_param_string('revcat');
    $url .= _checkbook_project_get_url_param_string('fundsrccode');
    $url .= _checkbook_project_get_year_url_param_string();
    $count = $node->count;
    $footer = '';
    if($node->totalDataCount > 0)
    $footer = \"<a class='show-details bottomContainerReload' href='$url'>Details >></a>\";
    else
    $footer = \"<a class='show-details bottomContainerReload' href='$url' style='display:none;'>Details >></a>\";
        return $footer;
",

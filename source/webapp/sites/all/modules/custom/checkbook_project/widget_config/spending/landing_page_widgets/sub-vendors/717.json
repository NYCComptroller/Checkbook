{
    "widgetType": "data_tables",
    "widgetSubType":"ajaxSimple",
    "no_results_content":"No Results Found",
    "defaultParameters":{"type_of_year":"B","spending_category_id":""},
    "cleanURLParameters":["year","agency","yeartype","calyear","vendor","category","mwbe","industry"],
    "urlParamMap":{"year":"year_id","agency":"agency_id","yeartype":"type_of_year","calyear":"year_id","vendor":"vendor_id","category":"spending_category_id","mwbe":"minority_type_id","industry":"industry_type_id"},
    "dataset": "checkbook:contracts_subven_vendor_spending",
    "noDataInitialLoad":true,
    "totalAggregateColumns":["check_amount_sum"],
    "columns": [
        "yeartype.yeartype",
        "check_amount_sum",
        "sub_vendor_count",
        "sub_vendor.sub_vendor",
        "prime_vendor.prime_vendor",
        "prime_vendor.prime_vendor.legal_name",
        "total_contract_amount_sum",
        "year.year"
    ],
    "limit":5,
    "enableExpand":true,
    "getTotalDataCount":true,
    "disableViewAll":true,
    "header":"
        $node->widgetConfig->getData=false;
        load_widget_data($node);
        if($node->totalDataCount > 4) $count = '<span class=\"hideOnExpand\">5 </span>';
        $header='<div class=\"tableHeader\"><h2>Top ' .  $count . 'Prime Vendors</h2><span class=\"contCount\"> Number of Prime Vendors:  ' . number_format($node->totalDataCount) . '</span></div>';
        return $header;
    ",
    "footer":"
        $url = SpendingUtil::getSpendingFooterUrl($node);
        $footer = '';
        if($node->totalDataCount > 0)
             $footer = \"<a class='show-details bottomContainerReload' href='$url'>Details >></a>\";
        else
              $footer = \"<a class='show-details bottomContainerReload' href='$url' style='display:none;'>Details >></a>\";

        return $footer;
    ",
    "derivedColumns": {
        "formatted_check_amount_sum": {
            "type": "expression2",
            "expression": "custom_number_formatter_format($row['check_amount_sum'],2,'$')"
        },
        "formatted_total_contract_amount_sum": {
            "type": "expression2",
            "expression": "custom_number_formatter_format($row['total_contract_amount_sum'],2,'$')"
        },
        "prime_vendor_name_formatted": {
            "type":"expression2",
            "expression":"_get_tooltip_markup($row['prime_vendor_prime_vendor_legal_name'],36)"
        },
        "prime_vendor_name_link": {
            "type":"expression2",
            "expression":"'<a href=\"' . SpendingUtil::getVendorNameLinkUrl($node,$row) . '\">' . $row[prime_vendor_name_formatted] . '</a>'"
        },
        "prime_vendor_name_link2": {
            "type":"expression2",
            "expression":"($row[prime_vendor_prime_vendor] == null )?$row['prime_vendor_prime_vendor_legal_name']:$row[prime_vendor_name_link]"
        },
        "percent_spending":{
            "type":"expression2",
            "expression": "SpendingUtil::getPercentYtdSpending($node, $row)",
            "visibility_flag": "is_mwbe"
        }
    },
    "adjustParameters":"
        if(!$node->is_mwbe) {
            unset($parameters['minority_type_id']);
            unset($parameters['industry_type_id']);
        }

        return $parameters;
    ",
    "summaryView":{
        "template":"spending_vendor_summary",
        "templateTitleEval":"
            $catName = RequestUtil::getSpendingCategoryName();
            $mwbe_title = _checkbook_check_is_mwbe_page() ? 'M/WBE ' : '';
            return ($mwbe_title . 'Prime Vendors ' . $catName . ' Transactions');
        "
    },
    "WidgetTitleEval":"
        $catName = RequestUtil::getSpendingCategoryName();
        $mwbe_title = _checkbook_check_is_mwbe_page() ? 'M/WBE ' : '';
        return ($mwbe_title . 'Prime Vendors ' . $catName . ' Transactions');
    ",
    "table_title":"",
    "table_columns": [
        {"labelAlias":"prime_vendor","column":"prime_vendor_name_link2","sortSourceColumn":"prime_vendor.prime_vendor.legal_name"},
        {"labelAlias":"num_sub_vendors","column":"sub_vendor_count","sortSourceColumn":"sub_vendor_count"},
        {"labelAlias":"ytd_spending","column":"vendor_amount_link","sortSourceColumn":"check_amount_sum"},
        {"labelAlias":"total_contract_amount","column":"formatted_total_contract_amount_sum","sortSourceColumn":"total_contract_amount_sum"},
        {"label":"","column":""}
    ],
    "dataTableOptions":{
        "aoColumns": [
            {"sClass":"text","sWidth":"180px","bSortable":false},
            {"sClass":"number","bSortable":false},
            {"sClass":"number","asSorting":["desc","asc"]},
            {"sClass":"number","sWidth":"180px","asSorting":["desc","asc"]},
            {"sWidth":"15px","bSortable":false}
        ] ,
        "bServerSide": true,
        "bFilter": false,
        "bPaginate": false,
        "bProcessing":true,
        "bLengthChange": false,
        "bInfo": false,
        "bAutoWidth": false,
        "aaSorting": [[2,"desc"]],
        "fnServerParams": "##function ( aoData ) {
        reloadExpandCollapseWidget(this,aoData);
        }##",
        "oLanguage":{
            "sProcessing":"<img src='/sites/all/themes/checkbook/images/loading_large.gif' title='Processing...'/>"
        }
    }
}
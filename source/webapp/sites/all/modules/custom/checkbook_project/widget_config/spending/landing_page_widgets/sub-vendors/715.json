{
    "widgetType":"data_tables",
    "widgetSubType":"ajaxSimple",
    "cleanURLParameters":[
        "agency",
        "vendor",
        "category",
        "year",
        "yeartype",
        "check_eft_issued_nyc_year_id",
        "calendar_fiscal_year_id",
        "mwbe",
        "industry"
    ],
    "urlParamMap":{
        "agency":"agency_id",
        "vendor":"prime_vendor.prime_vendor",
        "category":"spending_category_id",
        "year":"year_id",
        "yeartype":"year_type",
        "check_eft_issued_nyc_year_id":"check_eft_issued_date",
        "calendar_fiscal_year_id":"calendar_fiscal_year_id",
        "mwbe":"minority_type_id"
    },
    "getTotalDataCount":true,
    "limit":"5",
    "noDataInitialLoad":true,
    "html_class":"",
    "no_results_content":"No Results Found",
    "dataset":"checkbook:subcontract_spending_details",
    "columns":[
        "issuedate.issuedate",
        "agency.agency",
        "agency.agency.agency_name",
        "sub_vendor.sub_vendor",
        "sub_vendor.sub_vendor.legal_name",
        "prime_vendor.prime_vendor",
        "prime_vendor.prime_vendor.legal_name",
        "chkamt.chkamt"
    ],
    "enableExpand":true,
    "disableViewAll":true,
    "adjustParameters":"

        $yearType = $parameters['year_type'][0];
        $year = $parameters['year_id'][0];

        if(isset($yearType)){
            if($yearType == 'B')
                $parameters['check_eft_issued_nyc_year_id'] = $year;
            else if($yearType == 'C')
                $parameters['calendar_fiscal_year_id'] = $year;
        }

        unset($parameters['year_type']);
        unset($parameters['year_id']);

        if(!$node->is_mwbe) {
            unset($parameters['minority_type_id']);
        }

        return $parameters;
    ",
    "header":"
        $node->widgetConfig->getData=false;
        load_widget_data($node);
        if($node->totalDataCount > 4) $count = '<span class=\"hideOnExpand\">5 </span>';
        $header='<div class=\"tableHeader\"><h2>Top ' .  $count . 'Checks</h2><span class=\"contCount\"> Number of Checks:  ' . number_format($node->totalDataCount) . '</span></div>';
        return $header;
    ",
    "footer":"
        $url = SpendingUtil::getSpendingFooterUrl($node);

        $footer = '';
        if($node->totalDataCount > 0)
             $footer = \"<a class='show-details bottomContainerReload' href='$url'>Details >></a>\";
        else
              $footer = \"<a class='show-details bottomContainerReload' href='$url' style='display:none;'>Details >></a>\";

        return $footer;
    ",
    "derivedColumns": {
            "agency_name_link": {
                "type":"expression2",
                "expression":"'<a href=\"' . SpendingUtil::getAgencyNameLinkUrl($node,$row) . '\">' . $row[agency_agency_agency_name] . '</a>'"
            },
            "sub_vendor_name_formatted": {
                "type":"expression2",
                "expression":"_get_tooltip_markup($row['sub_vendor_sub_vendor_legal_name'],36)"
            },
            "sub_vendor_name_link": {
                "type":"expression2",
                "expression":"'<a href=\"' . SpendingUtil::getSubVendorNameLinkUrl($node,$row) . '\">' . $row[sub_vendor_name_formatted] . '</a>'"
            },
            "sub_vendor_name_link2": {
                "type":"expression2",
                "expression":"($row[sub_vendor_sub_vendor] == null )?$row['sub_vendor_sub_vendor_legal_name']:$row[sub_vendor_name_link]"
            },
            "prime_vendor_name_formatted": {
                "type":"expression2",
                "expression":"_get_tooltip_markup($row['prime_vendor_prime_vendor_legal_name'],36)"
            },
            "prime_vendor_name_link": {
                "type":"expression2",
                "expression":"'<a href=\"' . SpendingUtil::getPrimeVendorNameLinkUrl($node,$row) . '\">' . $row[prime_vendor_name_formatted] . '</a>'"
            },
            "prime_vendor_name_link2": {
                "type":"expression2",
                "expression":"($row[prime_vendor_prime_vendor] == null )?$row['prime_vendor_prime_vendor_legal_name']:$row[prime_vendor_name_link]"
            },
            "formatted_check_amount": {
                "type":"expression2",
                "expression":"custom_number_formatter_format($row['chkamt_chkamt'],2,'$')"
            }
    },
    "WidgetTitleEval":"
        $catName = RequestUtil::getSpendingCategoryName();
        $title = _checkbook_check_is_sub_vendor_page() ? 'Sub Vendors ' : '';
        return ($title . 'Checks ' . $catName . ' Transactions');
    ",
    "table_columns": [
            {"labelAlias":"issue_date","column":"issuedate_issuedate"},
            {"labelAlias":"agency_name","column":"agency_name_link","sortSourceColumn":"agency.agency.agency_name"},
            {"labelAlias":"sub_vendor_name","column":"sub_vendor_name_link2","sortSourceColumn":"sub_vendor.sub_vendor.legal_name"},
            {"labelAlias":"prime_vendor","column":"prime_vendor_name_link2","sortSourceColumn":"prime_vendor.prime_vendor.legal_name"},
            {"labelAlias":"check_amount","column":"formatted_check_amount","sortSourceColumn":"chkamt.chkamt"},
            {"label":"","column":""}
    ],
    "dataTableOptions":{
        "aoColumns": [
                  {"bSortable": true,"sClass":"text","sWidth":"130px","asSorting": ["asc","desc"]},
                  {"bSortable": false,"sClass":"text","sWidth":"250px"},
                  {"bSortable": false,"sClass":"text","sWidth":"230px"},
                  {"bSortable": false,"sClass":"text","sWidth":"230px"},
                  {"sClass":"number","asSorting":["desc","asc"]},
                  {"bSortable": false,"sWidth":"15px"}
        ],
        "bServerSide": true,
        "bFilter": false,
        "bPaginate": false,
        "bProcessing":true,
        "bLengthChange": false,
        "bInfo": false,
        "bAutoWidth": false,
        "aaSorting": [[ 4, "desc" ]],
        "fnServerParams": "##function ( aoData ) {
                   reloadExpandCollapseWidget(this,aoData);
        }##",
    "oLanguage":{ "sProcessing":"<img src='/sites/all/themes/checkbook/images/loading_large.gif' title='Processing...'/>"}
   }
}
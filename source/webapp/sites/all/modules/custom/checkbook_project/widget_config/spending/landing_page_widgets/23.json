{
    "widgetType": "data_tables",
    "widgetSubType":"ajaxSimple",
    "no_results_content":"No Results Found",
    "defaultParameters":{"type_of_year":"B"},
    "cleanURLParameters":["year","agency","yeartype","calyear","category","vendor","mwbe","industry"],
    "urlParamMap":{"year":"year_id","agency":"agency_id","yeartype":"type_of_year","calyear":"year_id","category":"spending_category_id","vendor":"vendor_id","mwbe":"minority_type_id","industry":"industry_type_id"},
    "dataset": "checkbook:spending_data",
    "preProcessConfiguration":"
        $node->is_mwbe = _checkbook_check_is_mwbe_page();
        if($node->is_mwbe) $node->widgetConfig->dataset = 'checkbook:spending_mwbe_data';
    ",
    "noDataInitialLoad":true,
    "totalAggregateColumns":["check_amount_sum"],
    "columns": ["yeartype.yeartype","check_amount_sum","agency.agency","agency.agency.agency_short_name","year.year","agency.agency.agency_name"],
    "limit":5,
    "enableExpand":true,
    "getTotalDataCount":true,
    "disableViewAll":true,
    "header":"
        $node->widgetConfig->getData=false;
        load_widget_data($node);
        if($node->totalDataCount > 4) $count = '<span class=\"hideOnExpand\">5 </span>';
        $header='<div class=\"tableHeader\"><h2>Top ' .  $count . 'Agencies</h2><span class=\"contCount\"> Number of Agencies:  ' . number_format($node->totalDataCount) . '</span></div>';
        return $header;
    ",
    "footer":"
        $url = SpendingUtil::getSpendingFooterUrl($node);
        $footer = '';
        if($node->totalDataCount > 0)
             $footer = \"<a class='show-details bottomContainerReload' href='$url'>Details >></a>\";
        else
              $footer = \"<a class='show-details bottomContainerReload' href='$url' style='display:none;'>Details >></a>\";
        return $footer;
    ",
    "derivedColumns": {
        "agency_name_link": {
            "type": "expression2",
            "expression": "'<a href=\"' . SpendingUtil::getAgencyNameLinkUrl($node,$row) . '\">' . $row[agency_agency_agency_name] . '</a>'"
        },
        "formatted_check_amount_sum": {
            "type": "expression2",
            "expression": "custom_number_formatter_format($row['check_amount_sum'],2,'$')"
        },
        "agency_amount_link":{
            "type":"expression2",
            "expression": "'<a class=\"bottomContainerReload\" href=\"' . SpendingUtil::getAgencyAmountLinkUrl($node,$row) . '\">' . $row['formatted_check_amount_sum'] . '</a>'"
        },
        "percent_spending":{
            "type":"expression2",
            "expression": " number_format($row['check_amount_sum']/$node->totalAggregateColumns['check_amount_sum']*100 ,2) . '%'",
            "visibility_flag": "is_mwbe"
        }
    },
    "adjustParameters":"
        if(!$node->is_mwbe) {
            unset($parameters['minority_type_id']);
            unset($parameters['industry_type_id']);
        }

        return $parameters;
    ",
    "summaryView":{
        "template":"spending_agency_summary",
        "templateTitleEval":"
            $catName = RequestUtil::getSpendingCategoryName();
            $mwbe_title = _checkbook_check_is_mwbe_page() ? 'M/WBE ' : '';
            return ($mwbe_title . 'Agencies ' . $catName . ' Transactions');
        "
    },
    "WidgetTitleEval":"
        $catName = RequestUtil::getSpendingCategoryName();
        $mwbe_title = _checkbook_check_is_mwbe_page() ? 'M/WBE ' : '';
        return ($mwbe_title . 'Agencies ' . $catName . ' Transactions');
    ",
    "table_title":"",
    "table_columns": [
    {
        "labelAlias": "agency_name",
        "column": "agency_name_link",
        "header": "false",
        "sortSourceColumn":"agency.agency.agency_name"
    },
    {
        "labelAlias": "ytd_spending",
        "column": "agency_amount_link",
        "header": "false",
        "sortSourceColumn":"check_amount_sum"
    },
    {
        "labelAlias": "percent_spending",
        "column": "percent_spending",
        "header": "false",
        "sortSourceColumn":"check_amount_sum",
        "visibility_flag": "is_mwbe"
    },
    {
        "label": "",
        "column": ""
    }
  ],
    "dataTableOptions":{
        "aoColumns": [
            {"bSortable": false,"sClass":"text","visibility_flag":"-is_mwbe"},
            {"sClass":"number","sWidth":"150px","asSorting":["desc","asc"],"visibility_flag":"-is_mwbe"},
            {"bSortable": false,"sWidth":"15px","visibility_flag":"-is_mwbe"},
            {"bSortable": false,"sClass":"text","visibility_flag":"is_mwbe"},
            {"sClass":"number","sWidth":"75px","asSorting":["desc","asc"],"visibility_flag":"is_mwbe"},
            {"sClass":"number","sWidth":"75px","asSorting":["desc","asc"],"visibility_flag":"is_mwbe"},
            {"bSortable": false,"sWidth":"15px","visibility_flag":"is_mwbe"}
        ],
        "bServerSide": true,
        "bFilter": false,
        "bPaginate": false,
        "bProcessing":true,
        "bLengthChange": false,
        "bInfo": false,
        "bAutoWidth": false,
        "aaSorting": [[ 1, "desc" ]],
        "fnServerParams": "##function ( aoData ) {
                   reloadExpandCollapseWidget(this,aoData);
        }##",
        "oLanguage":{
            "sProcessing":"<img src='/sites/all/themes/checkbook/images/loading_large.gif' title='Processing...'/>"
        }
    }
}
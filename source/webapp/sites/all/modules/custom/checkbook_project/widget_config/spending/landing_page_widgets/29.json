{
    "widgetType": "data_tables",
    "widgetSubType":"ajaxSimple",
    "no_results_content":"No Results Found",
    "defaultParameters":{},
    "cleanURLParameters":["year","agency","calyear","yeartype","vendor","category","dept","mwbe","industry"],
    "urlParamMap":{"year":"year_id","agency":"agency_id","yeartype":"type_of_year","calyear":"year_id","vendor":"vendor_id","category":"spending_category_id","dept":"department.department","mwbe":"minority_type_id","industry":"industry_type_id"},
    "dataset": "checkbook:spending_data",
    "preProcessConfiguration":"
        $node->is_mwbe = _checkbook_check_is_mwbe_page();
        if($node->is_mwbe) $node->widgetConfig->dataset = 'checkbook:spending_mwbe_data';
    ",
    "noDataInitialLoad":true,
    "totalAggregateColumns":["check_amount_sum"],
    "columns": ["check_amount_sum","agency.agency","department.department","department.department.department_name","year.year"],
    "limit":5,
    "enableExpand":true,
    "getTotalDataCount":true,
    "disableViewAll":true,
    "header":"
        $node->widgetConfig->getData=false;
        load_widget_data($node);
        if($node->totalDataCount > 4) $count = '<span class=\"hideOnExpand\">5 </span>';
        $header='<div class=\"tableHeader\"><h2>Top ' .  $count . 'Departments</h2><span class=\"contCount\"> Number of Departments:  ' . number_format($node->totalDataCount) . '</span></div>';
        return $header;
    ",
    "footer":"
        $url = SpendingUtil::getSpendingFooterUrl($node);
        $footer = '';
        if($node->totalDataCount > 0)
            $footer = \"<a class='show-details bottomContainerReload' href='$url'>Details >></a>\";
        else
            $footer = \"<a class='show-details bottomContainerReload' href='$url' style='display:none;'>Details >></a>\";
        return $footer;
    ",
    "derivedColumns": {
        "formatted_check_amount_sum": {
            "type": "expression2",
            "expression": "custom_number_formatter_format($row['check_amount_sum'],2,'$')"
        },
        "department_amount_link":{
            "type":"expression2",
            "expression": "'<a class=\"bottomContainerReload\" href=\"' . SpendingUtil::getDepartmentAmountLinkUrl($node,$row) . '\">' . $row['formatted_check_amount_sum'] . '</a>'"
        },
        "percent_spending":{
            "type":"expression2",
            "expression": "SpendingUtil::getPercentYtdSpending($node, $row)",
            "visibility_flag": "is_mwbe"
        }
    },
    "adjustParameters":"
        if(!$node->is_mwbe) {
            unset($parameters['minority_type_id']);
            unset($parameters['industry_type_id']);
        }

        return $parameters;
    ",
    "summaryView":{
        "template":"spending_dept_summary",
        "templateTitleEval":"
            $catName = RequestUtil::getSpendingCategoryName();
            $mwbe_title = _checkbook_check_is_mwbe_page() ? 'M/WBE ' : '';
            return ($mwbe_title . 'Departments ' . $catName . ' Transactions');
        "
    },
    "WidgetTitleEval":"
        $catName = RequestUtil::getSpendingCategoryName();
        $mwbe_title = _checkbook_check_is_mwbe_page() ? 'M/WBE ' : '';
        return ($mwbe_title . 'Departments ' . $catName . ' Transactions');
    ",
    "table_title":"",
    "table_columns": [
        {"labelAlias": "dept_name","column": "department_department_department_name","header": "false","sortSourceColumn":"department.department.department_name"},
        {"labelAlias": "ytd_spending","column": "department_amount_link","header": "false","sortSourceColumn":"check_amount_sum"},
        {"labelAlias": "percent_spending","column": "percent_spending","header": "false","sortSourceColumn":"check_amount_sum","visibility_flag": "is_mwbe"},
        {"label": "","column": ""}
    ],
    "dataTableOptions":{
        "aoColumns": [
            {"bSortable": false,"sClass":"text","visibility_flag":"-is_mwbe"},
            {"sClass":"number","sWidth":"150px","asSorting":["desc","asc"],"visibility_flag":"-is_mwbe"},
            {"bSortable": false,"sWidth":"15px","visibility_flag":"-is_mwbe"},
            {"bSortable": false,"sClass":"text","visibility_flag":"is_mwbe"},
            {"sClass":"number","sWidth":"75px","asSorting":["desc","asc"],"visibility_flag":"is_mwbe"},
            {"sClass":"number","sWidth":"75px","asSorting":["desc","asc"],"visibility_flag":"is_mwbe"},
            {"bSortable": false,"sWidth":"15px","visibility_flag":"is_mwbe"}
        ] ,
        "bServerSide": true,
        "bFilter": false,
        "bPaginate": false,
        "bProcessing":true,
        "bLengthChange": false,
        "bInfo": false,
        "bAutoWidth": false,
        "aaSorting": [[ 1, "desc" ]],
        "fnServerParams": "##function ( aoData ) {
                   reloadExpandCollapseWidget(this,aoData);
        }##",
        "oLanguage":{
            "sProcessing":"<img src='/sites/all/themes/checkbook/images/loading_large.gif' title='Processing...'/>"
        }
    }
}
{
"widgetType": "data_tables",
"widgetSubType":"ajaxSimple",
"no_results_content":"No Results Found",
"defaultParameters":{},
"cleanURLParameters":["year","agency","calyear","yeartype","vendor","category","dept"],
 "urlParamMap":{"year":"year_id","agency":"agency_id","yeartype":"type_of_year","calyear":"year_id","vendor":"vendor_id","category":"spending_category_id","dept":"department.department"},
"dataset": "checkbook:spending_data",
"noDataInitialLoad":true,
"columns": ["check_amount_sum","agency.agency","department.department","department.department.department_name","year.year"],
"limit":5,
"enableExpand":true,
"getTotalDataCount":true,
"disableViewAll":true,
"header":"
$node->widgetConfig->getData=false;
load_widget_data($node);
if($node->totalDataCount > 4) $count = '<span class=\"hideOnExpand\">5 </span>';
$header='<div class=\"tableHeader\"><h2>Top ' .  $count . 'Departments</h2><span class=\"contCount\"> Number of Departments:  ' . number_format($node->totalDataCount) . '</span></div>';
return $header;
",
"footer":"
$url = '/panel_html/spending_transactions/spending/transactions'. _checkbook_project_get_url_param_string(\"vendor\") ._checkbook_project_get_url_param_string(\"agency\") ._checkbook_project_get_url_param_string(\"category\")  . '/dtsmnid/' . $node->nid . _checkbook_project_get_year_url_param_string(false,false,true);
$footer = '';
if($node->totalDataCount > 5)
      $footer = \"<a class='show-details bottomContainerReload' href='$url' style='display:none;'>Details >></a>\";
else if($node->totalDataCount > 0 && $node->totalDataCount <= 5)
     $footer = \"<a class='show-details bottomContainerReload' href='$url'>Details >></a>\";
else
      $footer = \"<a class='show-details bottomContainerReload' href='$url' style='display:none;'>Details >></a>\";
return $footer;
",
"derivedColumns": {
"formatted_check_amount_sum": {
      "type": "expression2",
      "expression": "custom_number_formatter_format($row['check_amount_sum'],2,'$')"
    },
 "department_amount_link":{
    "type":"expression2",
 "expression": "'<a class=\"bottomContainerReload\" href=\"/panel_html/spending_transactions/spending/transactions' . _checkbook_project_get_year_url_param_string(false,false,true)  ._checkbook_project_get_url_param_string(\"vendor\")  . '/smnid/' . $node->nid . _checkbook_project_get_url_param_string(\"category\") . '/agency/'. $row[agency_agency] .  '/dept/' . $row[department_department]  .  '\">' . $row['formatted_check_amount_sum'] . '</a>'"
  }
},

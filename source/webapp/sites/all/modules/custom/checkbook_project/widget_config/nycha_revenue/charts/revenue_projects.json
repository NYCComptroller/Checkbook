  if(function_exists('_checkbook_project_applyParameterFilters')){
    $adjustedParameters = _checkbook_project_applyParameterFilters($node,$parameters);
  }
  $adjustedParameters['gl_project_id.gl_project_id'][] = data_controller_get_operator_factory_instance()->initiateHandler(NotEmptyOperatorHandler::$OPERATOR__NAME);
  $adjustedParameters['gl_project_description.gl_project_description'][] = data_controller_get_operator_factory_instance()->initiateHandler(NotWildcardOperatorHandler::$OPERATOR__NAME, 'No Project Assigned',FALSE,TRUE);
  return $adjustedParameters;
  ",
  "transformationPHP":"
  $landing_page =  '/' .  current_path()  ;
  $allZero = TRUE;
  foreach ($node->data as $row) {
  if (abs($row['revenue_recognized_amount']) > 0){$allZero = FALSE;}
if (abs($row['revenue_funds_available']) > 0){$allZero = FALSE;}

$url = $landing_page .  '/project/' . $row['gl_project_id_gl_project_id'];

$categories[] = html_entity_decode($row['gl_project_description_gl_project_description'],ENT_QUOTES);
$recognized_data[] = array('name' => html_entity_decode($row['gl_project_description_gl_project_description'],ENT_QUOTES), 'y' => $row['revenue_recognized_amount'], 'url' => $url);
$remaining_data[] = array('name' => html_entity_decode($row['gl_project_description_gl_project_description'],ENT_QUOTES), 'y' => $row['revenue_funds_available'], 'url' => $url);
}
if($allZero){$node->totalDataCount = 0;}
$node->widgetConfig->chartTitle = 'Top Ten Projects by Revenue';
$node->widgetConfig->chartConfig->xAxis->categories = $categories;

$node->widgetConfig->chartConfig->series = array(array('name' => 'Recognized', 'data' => $recognized_data),array('name' => 'Remaining', 'data' => $remaining_data));
return $node->data;
",

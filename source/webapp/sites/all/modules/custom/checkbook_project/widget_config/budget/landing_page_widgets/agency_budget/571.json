{
"widgetType": "data_tables",
"widgetSubType":"ajaxSimple",
"disableViewAll":true,
"enableExpand":true,
"getTotalDataCount":true,
"no_results_content":"No Results Found",
"cleanURLParameters":["year","expcategory","agency","dept","bdgcode"],
"urlParamMap":{"year":"year_id.year_id","expcategory":"object_class_id","agency":"agency_id","dept":"department_id","bdgcode":"budget_code_id"},
"defaultParameters":{"year_id.year_id":113},
"noDataInitialLoad":true,
"dataset": "checkbook:budget",
"columns": ["year_id.year_id","budget_code_name.budget_code_name","budget_code.budget_code","budget_committed",
            "pre_encumbered","encumbered","accrued_expense","cash_payments","post_adjustments"],
"limit":5,
"widgetTitle":"Expense Budget Categories by Committed Expense Budget Transactions",
"summaryView":{
    "template":"budget_expense_transactions_summary",
    "templateTitle":"Expense Budget Category by Committed Expense Budget Transactions",
    "templateLabel":"Expense Budget Category",
    "templateLabelEval":"return $node->data[0]['budget_code_name_budget_code_name'];"
},
"header":"
    $node->widgetConfig->getData=false;
    load_widget_data($node);
    if($node->totalDataCount > 4) $count = '<span class=\"hideOnExpand\">5 </span>';
    $header='<div class=\"tableHeader\"><h2>Top ' .  $count . 'Expense Budget Categories by Committed Expense Budget</h2><span class=\"contCount\"> Number of Expense Budget Categories:  ' . number_format($node->totalDataCount) . '</span></div>';
    return $header;
",
"footer":"
    $url = '/panel_html/budget_transactions/budget/transactions'.'/dtsmnid/' . $node->nid;
    $url .= _checkbook_project_get_url_param_string('agency');
    $url .= _checkbook_project_get_url_param_string('dept');
    $url .= _checkbook_project_get_url_param_string('expcategory');
    $url .= _checkbook_project_get_url_param_string('bdgcode');
    $url .= _checkbook_project_get_year_url_param_string();
    $count = $node->count;
    $footer = '';
    if($node->totalDataCount > 0)
       $footer = \"<a class='show-details bottomContainerReload' href='$url'>Details >></a>\";
    else
       $footer = \"<a class='show-details bottomContainerReload' href='$url' style='display:none;'>Details >></a>\";
    return $footer;
",
 "derivedColumns":{
    "committed_formatted":{
            "expression":"'<a class=\"bottomContainerReload\" href=\"/panel_html/budget_transactions/panel_html/budget_transactions/budget/transactions'
                               .'/smnid/' . $node->nid
                               . _checkbook_project_get_year_url_param_string()
                               ._checkbook_project_get_url_param_string(\"agency\")
                               ._checkbook_project_get_url_param_string(\"expcategory\")
                               ._checkbook_project_get_url_param_string(\"dept\")
                               .'/bdgcode/'.$row['budget_code_budget_code']
                               .'\">'.custom_number_formatter_format($row['budget_committed'],2,'$').'</a>'"    },
    "pre_encumbered_formatted":{
        "expression":"custom_number_formatter_format($row['pre_encumbered'],2,'$')"    },
    "encumbered_formatted":{
            "expression":"custom_number_formatter_format($row['encumbered'],2,'$')"    },
    "accrued_expense_formatted":{
            "expression":"custom_number_formatter_format($row['accrued_expense'],2,'$')"    },
    "cash_payments_formatted":{
            "expression":"custom_number_formatter_format($row['cash_payments'],2,'$')"    },
    "post_adjustments_formatted":{
            "expression":"custom_number_formatter_format($row['post_adjustments'],2,'$')"    }
},

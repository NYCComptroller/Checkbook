{
	"widgetType": "data_tables",
	"widgetSubType":"ajaxSimple",
	"no_results_content":"No Results Found",
	"cleanURLParameters":["vendor","year","yeartype","calyear","category","vendor","expcategory","agency","mwbe","industry"],
	"urlParamMap":{"year":"year.year","yeartype":"type_of_year","calyear":"year_id","category":"spending_category_id","vendor":"vendor_id","expcategory":"expenditure_object.expenditure_object","agency":"agency_id","mwbe":"minority_type_id","industry":"industry_type_id"},
	"defaultParameters":{"year.year":22,"type_of_year":"B"},
	"dataset": "checkbook:spending_data",
    "preProcessConfiguration":"
        $node->is_mwbe = _checkbook_check_is_mwbe_page();
        if($node->is_mwbe) $node->widgetConfig->dataset = 'checkbook:spending_mwbe_data';
    ",
	"noDataInitialLoad":true,
    "totalAggregateColumns":["check_amount_sum"],
	"columns": ["yeartype.yeartype","check_amount_sum","expenditure_object.expenditure_object","expenditure_object.expenditure_object.original_expenditure_object_name","year.year","industry.industry.industry_type_id"],
	"limit":5,
    "enableExpand":true,
    "getTotalDataCount":true,
    "disableViewAll":true,
    "header":"
        $node->widgetConfig->getData=false;
        load_widget_data($node);
        if($node->totalDataCount > 4) $count = '<span class=\"hideOnExpand\">5 </span>';
        $header='<div class=\"tableHeader\"><h2>Top ' .  $count . 'Expense Categories</h2><span class=\"contCount\"> Number of Expense Categories:  ' . number_format($node->totalDataCount) . '</span></div>';
        return $header;",
    "footer":"
        $url = RequestUtil::getSpendingFooterUrl($node);
        $footer = '';
        if($node->totalDataCount > 0)
             $footer = \"<a class='show-details bottomContainerReload' href='$url'>Details >></a>\";
        else
              $footer = \"<a class='show-details bottomContainerReload' href='$url' style='display:none;'>Details >></a>\";
        return $footer;
    ",
    "derivedColumns":
    {
        "formatted_check_amount_sum": {
            "type": "expression2",
            "expression": "custom_number_formatter_format($row['check_amount_sum'],2,'$')"
        },
        "formatted_check_amount_sum_link":{
            "type": "expression2",
             "expression": "'<a class=\"bottomContainerReload\" href=\"/panel_html/spending_transactions/spending/transactions' .  _checkbook_project_get_year_url_param_string(false,false,true) . _checkbook_append_url_params() ._checkbook_project_get_url_param_string(\"vendor\") . _checkbook_project_get_url_param_string(\"category\")  . '/smnid/' . $node->nid . _checkbook_project_get_url_param_string(\"agency\") . '/expcategory/' .  $row[expenditure_object_expenditure_object] .   '\">' . $row['formatted_check_amount_sum'] . '</a>'"
        },
        "percent_spending":{
            "type":"expression2",
            "expression": " number_format($row['check_amount_sum']/$node->totalAggregateColumns['check_amount_sum']*100 ,2) . '%'",
            "visibility_flag": "is_mwbe"
        }
	},
    "adjustParameters":"
        if(!$node->is_mwbe) {
            unset($parameters['minority_type_id']);
            unset($parameters['industry_type_id']);
        }

        return $parameters;
    ",
    "adjustColumns":"
        $adjusted_columns = $node->widgetConfig->columns;
        if(!$node->is_mwbe && ($key = array_search('industry.industry.industry_type_id', $adjusted_columns)) !== false) unset($adjusted_columns[$key]);

        return $adjusted_columns;
    ",
    "summaryView":{
        "template":"spending_exp_category_summary",
        "templateTitleEval":"
            $catName = RequestUtil::getSpendingCategoryName();
            $mwbe_title = _checkbook_check_is_mwbe_page() ? 'M/WBE ' : '';
            return ($mwbe_title . 'Expense Categories ' . $catName . ' Transactions');
        "
    },
    "WidgetTitleEval":"
        $catName = RequestUtil::getSpendingCategoryName();
        $mwbe_title = _checkbook_check_is_mwbe_page() ? 'M/WBE ' : '';
        return ($mwbe_title . 'Expense Categories ' . $catName . ' Transactions');
    ",
	"table_title":"",
	"table_columns": [
		{"labelAlias":"expense_category","column":"expenditure_object_expenditure_object_original_expenditure_object_name","header": "false"},
		{"labelAlias":"ytd_spending","column":"formatted_check_amount_sum_link","header": "false","sortSourceColumn":"check_amount_sum"},
        {"labelAlias":"percent_spending","column":"percent_spending","header": "false","sortSourceColumn":"check_amount_sum","visibility_flag": "is_mwbe"},
        {"label": "","column": ""}
	],
	"dataTableOptions":{
        "aoColumns": [
            {"sClass":"text","bSortable": false,"visibility_flag": "-is_mwbe"},
            {"sWidth":"143px","sClass":"number","asSorting":["desc","asc"],"visibility_flag": "-is_mwbe"},
            {"bSortable": false,"sWidth":"15px","visibility_flag": "-is_mwbe"},
            {"sClass":"text","bSortable": false,"visibility_flag": "is_mwbe"},
            {"sWidth":"75px","sClass":"number","asSorting":["desc","asc"],"visibility_flag": "is_mwbe"},
            {"sWidth":"75px","sClass":"number","asSorting":["desc","asc"],"visibility_flag": "is_mwbe"},
            {"bSortable": false,"sWidth":"15px","visibility_flag": "is_mwbe"}
        ],
        "bServerSide": true,
        "bFilter": false,
        "bPaginate": false,
        "bProcessing":true,
        "bLengthChange": false,
        "bInfo": false,
        "bAutoWidth": false,
        "aaSorting": [[ 1, "desc" ]],
        "fnServerParams": "##function ( aoData ) {
                   reloadExpandCollapseWidget(this,aoData);
        }##",
        "oLanguage":{
            "sProcessing":"<img src='/sites/all/themes/checkbook/images/loading_large.gif' title='Processing...'/>"
        }
    }
}
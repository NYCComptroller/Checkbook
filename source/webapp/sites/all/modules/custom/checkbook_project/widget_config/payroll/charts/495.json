var year ='';
if(this.point.year_type == 'C'){
     year = 'CY ' + this.point.year;
}
else if(this.point.year_type == 'B'){
     year = 'FY ' + this.point.year;
}
return 'Agency: '+ this.point.name + '<br/>' + 'Year: '+ year + '<br/>' +'Overtime Amount: '+abbrNum(this.y,2,'$')}##

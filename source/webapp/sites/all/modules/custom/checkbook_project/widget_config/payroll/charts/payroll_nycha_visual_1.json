"chartTitle":"Top Ten Titles by Annual Salary",
"widgetDataLoader":"
$year_id = RequestUtilities::getRequestParamValue('year');
$where_filters = array();
foreach($node->widgetConfig->requestParams as $param=>$value){
$where_filters[] = _widget_build_sql_condition( $param, $value);
}
$where_filters[] = _widget_build_sql_condition( 'type_of_year', 'C');
$where_filters[] = _widget_build_sql_condition( 'agency_id', '162');
if(count($where_filters) > 0){
$where_filter = ' WHERE ' . implode(' AND ' , $where_filters);
}
$and_filter =  _widget_build_sql_condition( 'type_of_employment', 'Salaried');
$datasource = RequestUtilities::getRequestParamValue('datasource');
$sql = 'select civil_service_title,fiscal_year_id,year_value,MAX(annual_salary) as max_annual_salary
        FROM aggregateon_payroll_latest_employee_agency LEFT JOIN ref_year ON fiscal_year_id=year_id '. $where_filter . ' AND '.  $and_filter .
        'GROUP BY civil_service_title,fiscal_year_id,year_value order by MAX(annual_salary) desc limit 10';
$node->data  = _checkbook_project_execute_sql($sql,'main',$datasource);
",
"widgetUpdateJSONConfig":"
$series_new = array();
$index = 0;
foreach($node->data as $row){
$tooltip_label =
'Title: ' . $row['civil_service_title'] .'<br/>' .
'Year:' . $row['year_value'] .'<br/>'.
'Amount: ' . custom_number_formatter_format($row['max_annual_salary'] ,2, '$').  '<br/>';
$series_new[$index]->y = (float)$row['max_annual_salary'];
$series_new[$index]->tooltip_label = $tooltip_label;
$node->widgetConfig->gridConfig->data[] = array($row['civil_service_title'],$row['max_annual_salary'] );
$index += 1;
}
$node->widgetConfig->chartConfig->series[0]->name = 'Fiscal Years';
$node->widgetConfig->chartConfig->series[0]->type = 'column';
$node->widgetConfig->chartConfig->series[0]->pointWidth = 30;
$node->widgetConfig->chartConfig->series[0]->data = $series_new;
",

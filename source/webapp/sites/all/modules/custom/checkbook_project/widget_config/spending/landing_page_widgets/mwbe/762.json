{
    "widgetType": "data_tables",
    "widgetSubType":"ajaxSimple",
    "no_results_content":"No Results Found",
    "defaultParameters":{"type_of_year":"B","spending_category_id":""},
    "cleanURLParameters":["year","agency","yeartype","calyear","vendor","category","mwbe","industry"],
    "urlParamMap":{"year":"year_id","agency":"agency_id","yeartype":"type_of_year","calyear":"year_id","vendor":"vendor_id","category":"spending_category_id","mwbe":"minority_type_id","industry":"industry_type_id"},
    "dataset": "checkbook:contracts_mwbe_vendor_spending",
    "noDataInitialLoad":true,
    "totalAggregateColumns":["check_amount_sum"],
    "columns":[
        "check_amount_sum",
        "total_contract_amount_sum",
        "vendor.vendor",
        "vendor.vendor.legal_name",
        "year.year",
        "yeartype.yeartype",
        "minority_type.minority_type"
    ],
    "limit":5,
    "enableExpand":true,
    "getTotalDataCount":true,
    "disableViewAll":true,
    "header":"
        $node->widgetConfig->getData=false;
        load_widget_data($node);
        if($node->totalDataCount > 4) $count = '<span class=\"hideOnExpand\">5 </span>';
        $header='<div class=\"tableHeader\"><h2>Top ' .  $count . 'Prime Vendors</h2><span class=\"contCount\"> Number of Prime Vendors:  ' . number_format($node->totalDataCount) . '</span></div>';
        return $header;
    ",
    "footer":"
        $url = SpendingUtil::getSpendingFooterUrl($node);
        $footer = '';
        if($node->totalDataCount > 0)
             $footer = \"<a class='show-details bottomContainerReload' href='$url'>Details >></a>\";
        else
              $footer = \"<a class='show-details bottomContainerReload' href='$url' style='display:none;'>Details >></a>\";

        return $footer;
    ",
    "derivedColumns": {
        "mwbe_category_name": {
            "type":"expression2",
            "expression":"MappingUtil::getMinorityCategoryById($row['minority_type_minority_type'])"
        },
        "mwbe_category_name_link": {
            "type": "expression2",
            "expression": " RequestUtil::isNewWindow() || !MappingUtil::isMWBECertified(array($row['minority_type_minority_type'])) ? $row['mwbe_category_name']  : ('<a href=' . SpendingUtil::getMWBECategoryLinkUrl($node, $row) . '>'. $row[mwbe_category_name] .'</a>') "
        },
        "formatted_check_amount_sum": {
            "type": "expression2",
            "expression": "custom_number_formatter_format($row['check_amount_sum'],2,'$')"
        },
        "formatted_total_contract_amount_sum": {
            "type": "expression2",
            "expression": "custom_number_formatter_format($row['total_contract_amount_sum'],2,'$')"
        },
        "vendor_name_formatted": {
            "type": "expression2",
            "expression": "_get_tooltip_markup($row['vendor_vendor_legal_name'],50)"
        },
        "vendor_name_link": {
            "type": "expression2",
            "expression": "'<a href=\"' . SpendingUtil::getPrimeVendorNameLinkUrl($node,$row) . '\">' . $row[vendor_name_formatted] . '</a>'"
        } ,
        "vendor_amount_link":{
            "type":"expression2",
            "expression": "'<a class=\"bottomContainerReload\" href=\"' . SpendingUtil::getVendorAmountLinkUrl($node,$row) . '\">' . $row['formatted_check_amount_sum'] . '</a>'"
        },
        "percent_spending":{
            "type":"expression2",
            "expression": "SpendingUtil::getPercentYtdSpending($node, $row)"
        }
    },
    "summaryView":{
        "template":"spending_vendor_summary",
        "templateTitleEval":"return SpendingUtil::getTransactionPageTitle('Prime Vendor');"
    },
    "WidgetTitleEval":"return SpendingUtil::getTransactionPageTitle('Prime Vendor');",
    "table_title":"",
    "table_columns": [
        {"labelAlias": "prime_vendor","column": "vendor_name_link","sortSourceColumn":"vendor.vendor.legal_name"},
        {"labelAlias":"mwbe_category","column":"mwbe_category_name_link","sortSourceColumn":"minority_type.minority_type"},
        {"labelAlias": "ytd_spending","column": "vendor_amount_link","header": "false","sortSourceColumn":"check_amount_sum","headerClass":"sixty"},
        {"labelAlias": "percent_spending","column": "percent_spending","header": "false","sortSourceColumn":"check_amount_sum"},
        {"labelAlias": "total_contract_amount","column": "formatted_total_contract_amount_sum","sortSourceColumn":"total_contract_amount_sum","header": "false"},
        {"label": "","column": ""}
    ],
    "dataTableOptions":{
        "aoColumns": [
            {"sClass":"text","sWidth":"210px","bSortable": false},
            {"sClass":"text pad-left","sWidth":"110px","bSortable":false},
            {"sClass":"number","sWidth":"110px","asSorting":["desc","asc"]},
            {"sClass":"number","sWidth":"140px","asSorting":["desc","asc"]},
            {"sClass":"number","sWidth":"140px","asSorting":["desc","asc"]},
            {"bSortable": false,"sWidth":"5px"}
        ] ,
        "bServerSide": true,
        "bFilter": false,
        "bPaginate": false,
        "bProcessing":true,
        "bLengthChange": false,
        "bInfo": false,
        "bAutoWidth": false,
        "aaSorting": [[ 2, "desc" ]],
        "fnServerParams": "##function ( aoData ) {
        reloadExpandCollapseWidget(this,aoData);
        }##",
        "oLanguage":{
            "sProcessing":"<img src='/sites/all/themes/checkbook/images/loading_large.gif' title='Processing...'/>"
        }
    }
}
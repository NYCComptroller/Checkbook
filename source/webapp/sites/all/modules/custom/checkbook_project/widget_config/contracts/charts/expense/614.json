           "floating": "true",
           "layout": "horizontal"
        }
    },
    "series": [{
        "name": "Contract Amount",
        "type": "column",
        "pointWidth": 30,
        "data": {"ds":"contracts"}
    }],
    "title": {"text": ""},
    "yAxis": {
        "startOnTick":true,

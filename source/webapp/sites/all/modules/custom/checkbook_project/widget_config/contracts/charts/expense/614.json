tooltipformatter^^"formatter" : function() {
      return  "<div style='width:380px;white-space:normal;'>Contract ID: " + this.point.contractnum +
              "<br/>Vendor: " + "<span style='text-wrap:unrestricted'>" + this.point.vendor + '</span>' +
              "<br/>Contracting Agency: " + "<span style='text-wrap:unrestricted'>" + this.point.agency + '</span>' +
              "<br/>Amount: " + abbrNum(this.y, 2, "$") + "</div>";
}

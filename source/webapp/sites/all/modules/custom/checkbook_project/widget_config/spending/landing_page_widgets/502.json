{
    "widgetType": "data_tables",
    "widgetSubType": "ajaxSimple",
    "cleanURLParameters":["agency","vendor","category","year","yeartype","check_eft_issued_nyc_year_id","calendar_fiscal_year_id"],
    "urlParamMap":{
        "agency":"agency_id",
        "vendor":"vendor_id",
        "category":"spending_category_id",
        "year":"year_id",
        "yeartype":"year_type",
        "check_eft_issued_nyc_year_id":"check_eft_issued_nyc_year_id",
        "calendar_fiscal_year_id":"calendar_fiscal_year_id"
    },
    "getTotalDataCount":true,
    "limit":"5",
    "noDataInitialLoad":true,
    "html_class": "",
    "no_results_content":"No Results Found",
    "dataset": "checkbook:fact_disbursement_line_item",
    "columns": [
        "disbursement_line_item_id.disbursement_line_item_id",
        "issuedate.issuedate",
        "vendornm.vendornm",
        "agencynm.agencynm",
        "chkamnt.chkamnt",
        "expobjectname.expobjectname",
        "agency.agency",
        "vendor.vendor",
        "expenditure_object.expenditure_object",
        "deptname.deptname",
        "latest_minority_type_id@checkbook:spending_latest_mwbe_category_by_vendor"
//        "latest_minority_type_id@checkbook:spending_latest_mwbe_category_by_vendor_and_agency"
    ],
    "enableExpand":true,
    "disableViewAll":true,
    "adjustParameters":"

        $yearType = $parameters['year_type'][0];
        $year = $parameters['year_id'][0];

        if(isset($yearType)){
            if($yearType == 'B')
                $parameters['check_eft_issued_nyc_year_id'] = $year;
            else if($yearType == 'C')
                $parameters['calendar_fiscal_year_id'] = $year;
        }

        unset($parameters['year_type']);
        unset($parameters['year_id']);

        return $parameters;
    ",
    "header":"
        $node->widgetConfig->getData=false;
        load_widget_data($node);
        if($node->totalDataCount > 4) $count = '<span class=\"hideOnExpand\">5 </span>';
        $header='<div class=\"tableHeader\"><h2>Top ' .  $count . 'Checks</h2><span class=\"contCount\"> Number of Checks:  ' . number_format($node->totalDataCount) . '</span></div>';
        return $header;
    ",
    "footer":"
        $url = SpendingUtil::getSpendingFooterUrl($node);

        $footer = '';
        if($node->totalDataCount > 0)
             $footer = \"<a class='show-details bottomContainerReload' href='$url'>Details >></a>\";
        else
              $footer = \"<a class='show-details bottomContainerReload' href='$url' style='display:none;'>Details >></a>\";

        return $footer;
    ",
    "derivedColumns": {
            "agency_name_link": {
                "type": "expression2",
                "expression": "'<a href=\"' . SpendingUtil::getAgencyNameLinkUrl($node,$row) . '\">' . $row['agencynm_agencynm'] . '</a>'"
            },
            "vendor_name_formatted": {
                "type": "expression2",
                "expression": "_get_tooltip_markup($row['vendornm_vendornm'],36)"
            },
            "vendor_name_link": {
                "type": "expression2",
                "expression": "'<a href=\"' . SpendingUtil::getVendorNameLinkUrl($node,$row) . '\">' . $row[vendor_name_formatted] . '</a>'"
            },
            "vendor_name_link2": {
                "type": "expression2",
                "expression": "($row[vendor_id] == null )?$row['vendornm_vendornm']:$row[vendor_name_link]"
            },
            "formatted_check_amount": {
                "type": "expression2",
                "expression": "custom_number_formatter_format($row['chkamnt_chkamnt'],2,'$')"
            }
    },
    "WidgetTitleEval":"
        $catName = RequestUtil::getSpendingCategoryName();
        return ('Checks ' . $catName . ' Transactions');
    ",
    "table_columns": [
        {"labelAlias":"issue_date","column":"issuedate_issuedate","sortSourceColumn":"issuedate.issuedate"},
        {"labelAlias":"agency_name","column":"agency_name_link","sortSourceColumn":"agencynm.agencynm"},
        {"labelAlias":"prime_vendor","column":"vendor_name_link2","sortSourceColumn":"vendornm.vendornm"},
        {"label": "","column": ""},
        {"labelAlias":"expense_category","column":"expobjectname_expobjectname","sortSourceColumn":"expobjectname.expobjectname"},
        {"labelAlias":"check_amount","column": "formatted_check_amount","sortSourceColumn":"chkamnt.chkamnt"},
        {"label": "","column": ""}
    ],
    "dataTableOptions":{
        "aoColumns": [
            {"bSortable": true,"sClass":"text","sWidth":"100px","asSorting": ["asc","desc"]},
            {"bSortable": false,"sClass":"text pad-left","sWidth":"260px"},
            {"bSortable": false,"sClass":"text pad-left","sWidth":"250px"},
            {"bSortable": false,"sWidth":"5px" },
            {"bSortable": false,"sClass":"text pad-left","sWidth":"210px"},
            {"sClass":"number","asSorting": [ "desc","asc" ]},
            {"bSortable": false,"sWidth":"15px" }
        ],
        "bServerSide": true,
        "bFilter": false,
        "bPaginate": false,
        "bProcessing":true,
        "bLengthChange": false,
        "bInfo": false,
        "bAutoWidth": false,
        "aaSorting": [[ 5, "desc" ]],
        "fnServerParams": "##function ( aoData ) {
                   reloadExpandCollapseWidget(this,aoData);
        }##",
    "oLanguage":{ "sProcessing":"<img src='/sites/all/themes/checkbook/images/loading_large.gif' title='Processing...'/>"}
   }
}
{
"widgetType": "data_tables",
"widgetSubType": "dataTableList",
"cleanURLParameters":["agency","vendor","category","year","yeartype","check_eft_issued_nyc_year_id","calendar_fiscal_year_id"],
"urlParamMap":{"agency":"agency_id","vendor":"vendor_id","category":"spending_category_id","year":"year_id","yeartype":"year_type",
               "check_eft_issued_nyc_year_id":"check_eft_issued_nyc_year_id","calendar_fiscal_year_id":"calendar_fiscal_year_id"},
"useList":true,
"getTotalDataCount":true,
"limit":"5",
"noDataInitialLoad":true,
"html_class": "",
"no_results_content":"No Results Found",
"dataset": "checkbook:fact_disbursement_line_item",
"columns": ["check_eft_issued_date","vendor_name","agency_name","check_amount","expenditure_object_name",
            "agency_id","vendor_id","expenditure_object_id","department_name"],
"enableExpand":true,
"disableViewAll":true,
"adjustParameters":"

    $yearType = $parameters['year_type'][0];
    $year = $parameters['year_id'][0];

    if(isset($yearType)){
        if($yearType == 'B')
            $parameters['check_eft_issued_nyc_year_id'] = $year;
        else if($yearType == 'C')
            $parameters['calendar_fiscal_year_id'] = $year;
    }

    unset($parameters['year_type']);
    unset($parameters['year_id']);

    return $parameters;
",
"header":"
    $node->widgetConfig->getData=false;
    load_widget_data($node);
    if($node->totalDataCount > 4) $count = '<span class=\"hideOnExpand\">5 </span>';
    $header='<div class=\"tableHeader\"><h2>Top ' .  $count . 'Checks</h2><span class=\"contCount\"> Number of Checks:  ' . number_format($node->totalDataCount) . '</span></div>';
    return $header;
",
"footer":"
    $url = '/panel_html/spending_transactions/spending/transactions'. _checkbook_project_get_url_param_string(\"vendor\") ._checkbook_project_get_url_param_string(\"agency\")  . '/dtsmnid/' . $node->nid ._checkbook_project_get_url_param_string(\"category\") . _checkbook_project_get_year_url_param_string(false,false,true);
    $footer = '';
    if($node->totalDataCount > 5)
          $footer = \"<a class='show-details bottomContainerReload' href='$url' style='display:none;'>Details >></a>\";
    else if($node->totalDataCount > 0 && $node->totalDataCount <= 5)
         $footer = \"<a class='show-details bottomContainerReload' href='$url'>Details >></a>\";
    else
          $footer = \"<a class='show-details bottomContainerReload' href='$url' style='display:none;'>Details >></a>\";
    return $footer;
",
"derivedColumns": {
        "agency_name_link": {
            "type": "expression2",
            "expression": "'<a href=\"/spending_landing' .  _checkbook_project_get_url_param_string(\"vendor\") ._checkbook_project_get_url_param_string(\"category\") . _checkbook_project_get_year_url_param_string() . '/agency/'. $row[agency_id] .'\">' . $row[agency_name] . '</a>'"
        },
        "vendor_name_link": {
            "type": "expression2",
            "expression": "'<a href=\"/spending_landing' .  _checkbook_project_get_url_param_string(\"agency\") ._checkbook_project_get_url_param_string(\"category\") . _checkbook_project_get_year_url_param_string() . '/vendor/'. $row[vendor_id] .'\">' . $row[vendor_name] . '</a>'"
        },
        "vendor_name_link2": {
            "type": "expression2",
            "expression": "($row[vendor_id] == null )?$row['vendor_name']:$row[vendor_name_link]"
        },
        "formatted_check_amount": {
            "type": "expression2",
            "expression": "custom_number_formatter_format($row['check_amount'],2,'$')"
        }
},
"WidgetTitleEval":"
    $catName = RequestUtil::getSpendingCategoryName();
    return ('Checks ' . $catName . ' Transactions');
",
"table_columns": [
        {
            "labelAlias": "issue_date",
            "column": "check_eft_issued_date"
	    },
        {
            "labelAlias": "agency_name",
            "column": "agency_name_link",
            "sortSourceColumn":"agency_name"
	    },
	    {
            "labelAlias": "vendor_name",
            "column": "vendor_name_link2",
            "sortSourceColumn":"vendor_name"
	    },
	    {
            "labelAlias": "expense_category",
            "column":"expenditure_object_name"
	    },
        {
            "labelAlias": "check_amount",
            "column": "formatted_check_amount",
            "sortSourceColumn":"check_amount"
	    },
        {
            "label": "",
            "column": ""
        }
],
"dataTableOptions":{
"aoColumns": [
          { "bSortable": true,"sClass":"text","sWidth":"100px","asSorting": ["asc","desc"]},
          { "bSortable": false,"sClass":"text","sWidth":"210px"},
          { "bSortable": false,"sClass":"text","sWidth":"210px"},
          { "bSortable": false,"sClass":"text","sWidth":"210px"},
          { "sClass":"number","asSorting": [ "desc","asc" ]},
          { "bSortable": false,"sWidth":"15px" }],
        "bServerSide": true,
        "bFilter": false,
        "bPaginate": false,
        "bProcessing":true,
        "bLengthChange": false,
        "bInfo": false,
        "bAutoWidth": false,
        "aaSorting": [[ 4, "desc" ]],
        "fnServerParams": "##function ( aoData ) {
                   reloadExpandCollapseWidget(this,aoData);
        }##",
    "oLanguage":{ "sProcessing":"<img src='/sites/all/themes/checkbook/images/loading_large.gif' title='Processing...'/>"}
   }
}
function _widget_node_load($key, $type='node'){

	if(preg_match("/^admin/",$_GET['q'])){
		return "";
	}

	switch ($type) {
		case 'node':
			return node_load($key);;
		case 'file':
			return _widget_node_load_file($key);

	}
}


function data_controller_postgresql_dc_datasource_structure() {
    $items[PostgreSQLDataSource::TYPE] = array(
        'handler' => 'DefaultSQLDataSourceStructureHandler',
        'extensions' => array(
            'createDatabase' => 'DefaultCreateDatabaseStatementImpl',
            'dropDatabase' => 'DefaultDropDatabaseStatementImpl',

            'createTable' => 'PostgreSQLCreateTableStatementImpl',
            'truncateTable' => 'DefaultTruncateTableStatementImpl',
            'dropTable' => 'DefaultDropTableStatementImpl'
        )
    );

    return $items;
}

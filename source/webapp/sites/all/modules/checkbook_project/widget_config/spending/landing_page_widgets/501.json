"header":"
$node->widgetConfig->getData=false;
load_widget_data($node);
if($node->totalDataCount > 4) $count = '<span class=\"hideOnExpand\">5 </span>';
$header='<div class=\"tableHeader\"><h2>Top ' .  $count . 'Agencies</h2><span class=\"contCount\"> Number of Agencies:  ' . number_format($node->totalDataCount) . '</span></div>';
return $header;
",
"footer":"
$url = '/panel_html/spending_transactions/spending/transactions'. _checkbook_project_get_url_param_string(\"vendor\") ._checkbook_project_get_url_param_string(\"agency\")  . '/dtsmnid/' . $node->nid .'/category/2' . _checkbook_project_get_year_url_param_string(false,false,true);
$footer = '';
if($node->totalDataCount > 5)
      $footer = \"<a class='show-details bottomContainerReload' href='$url' style='display:none;'>Details >></a>\";
else if($node->totalDataCount > 0 && $node->totalDataCount <= 5)
     $footer = \"<a class='show-details bottomContainerReload' href='$url'>Details >></a>\";
else
      $footer = \"<a class='show-details bottomContainerReload' href='$url' style='display:none;'>Details >></a>\";
return $footer;
",
"derivedColumns": {
    "agency_name_link": {
      "type": "expression2",
